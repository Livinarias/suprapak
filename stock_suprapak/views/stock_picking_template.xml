<odoo>
    <data>
        <template id="report_delivery_document_suprapak" inherit_id="stock.report_delivery_document">
            <xpath expr="//table[@name='stock_move_table']/thead" position="after">
                <t t-set="box" t-value="0" />
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_product']" position="before">
                <th name="th_sm_box">
                    <strong>Box</strong>
                </th>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']/tbody/tr/td[1]" position="before">
                <t t-set="box" t-value="box + 1"/>
                <td>
                    <span t-esc="box"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>
<odoo>
    <data>
        <record id="form_data_sheet" model="ir.ui.view">
            <field name="name">form.data.sheet</field>
            <field name="model">data.sheet</field>
            <field name="arch" type="xml">
                <form string="Data sheet">
                    <header>
                        <button string="New Quotation" name="action_sale_quotations_new" type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_sale_quotation" icon="fa-pencil-square-o">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name" />
                            <h1><field name="name" required="True"/></h1>
                        </div>
                        <separator string="General" colspan="2" />
                        <group>
                            <group>
                                <field name="product_id" required="True"/>
                                <field name="opportunity_id" readonly="True"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority"/>
                                <field name="type_sheet"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Basic information">
                                <group>
                                    <group>
                                        <field name="partner_id"/>
                                        <field name="commentary"/>
                                        <field name="product_code"/>
                                        <!--<field name="sector"/>-->
                                    </group>
                                    <group>
                                        <field name="team_id"/>
                                        <field name="currency_id"/>
                                        <field name="tag_form_id"/>
                                        <field name="material_id"/>
                                        <field name="application_id"/>
                                        <field name="position_id"/>
                                        <field name="content_id"/>
                                    </group>
                                    <group>
                                        <field name="photo" widget="pdf_viewer"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Technical information">
                                <group>
                                    <group>
                                        <field name="print" widget="checkbox"/>
                                        <field name="no_print" widget="checkbox"/>
                                        <field name="print_class" widget="radio" attrs="{'invisible':[('print', '!=', True)]}"/>
                                        <field name="print_type" attrs="{'invisible':[('print', '!=', True)]}"/>

                                        <field name="product_type_id"/>
                                    </group>
                                    <group>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="form_id"/>
                                        <field name="movie_type_id"/>
                                        <field name="chemical_composition"/>
                                    </group>
                                    <group>
                                        <field name="specification_width_id"/>
                                        <field name="specification_long_id"/>
                                        <field name="caliber_id"/>
                                        <field name="overlap_id"/>
                                        <field name="tolerance"/>
                                        <field name="rhombus" attrs="{'invisible':[('overlap_id', 'not in', True)]}"/>
                                    </group>
                                    <group>
                                        <field name="guillotine"/>
                                        <field name="overlap_location_id"/>
                                        <field name="rhombus"/>
                                        <field name="average_label_weight"/>
                                        <!--<h5>falta especificar</h5>-->
                                        <field name="label_weight"/>
                                        <field name="roll_weight"/>
                                    </group>
                                    <group><!--rollo-->
                                        <field name="presentation_id"/>
                                        <field name="meter_per_roll" attrs="{'invisible':[('presentation_id', 'not in','ROLLO')]}"/>
                                        <field name="core_diameter_id" attrs="{'invisible':[('presentation_id', 'not in','ROLLO')]}"/>
                                        <field name="embossing_number_id" attrs="{'invisible':[('presentation_id', '!=','ROLLO')]}"/>
                                        <field name="number_splices_id" attrs="{'invisible':[('presentation_id', '!=','ROLLO')]}"/>
                                        <fields name="splice_type_id" attrs="{'invisible':[('presentation_id', 'not in','ROLLO')]}"/>
                                        <field name="splicing_tape_id" attrs="{'invisible':[('presentation_id', 'not in','ROLLO')]}"/>
                                    </group>
                                    <group><!--sellado-->
                                        <field name="seal_type_id" attrs="{'invisible':[('presentation_id', 'not in','SELLADO')]}"/>
                                        <field name="sealing_tab" attrs="{'invisible':[('presentation_id', 'not in','SELLADO')]}"/>
                                    </group>
                                    <group><!--preformado-->
                                        <field name="mold_id" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                        <field name="bottom_diameter" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                        <field name="upper_diameter" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                        <field name="tab_length" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                        <field name="band_height" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                        <field name="product" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                        <field name="long_modification" attrs="{'invisible':[('presentation_id', 'not in','PREFORMADO')]}"/>
                                    </group>
                                    <group><!--plano mecanico-->
                                        <field name="mechanic_plan_ids" />
                                    </group>
                                    <group><!--montaje multiple-->

                                    </group>
                                    <group>
                                        <field name="barcode_type_id"/>
                                        <field name="barcode_number"/>
                                    </group>
                                    <group>
                                        <field name="microperforated" widget="checkbox"/>
                                        <field name="microperforated_ids" attrs="{'invisible':[('microperforated', '!=', True)]}"/>
                                    </group>
                                    <group>
                                        <field name="drawn" widget="checkbox"/>
                                        <field name="drawn_type_id" attrs="{'invisible':[('drawn', '!=', True)]}"/>
                                        <field name="drawn_presentation_id" attrs="{'invisible':[('drawn', '!=', True)]}" domain="[('dranw_type_id', '=', drawn_type_id.drawn_type)]"/>
                                        <field name="tongue" attrs="{'invisible':[('drawn', '!=', True)]}"/>
                                    </group>
                                    <group>
                                        <field name="waistband" widget="checkbox"/>
                                        <field name="color_movie_id" attrs="{'invisible':[('waistband', '!=', True)]}"/>
                                    </group>
                                    <group>
                                        <field name="thermal_adhesive" widget="checkbox"/>
                                        <field name="adhesive_type_id" attrs="{'invisible':[('thermal_adhesive', 'not in', True )]}"/>
                                        <field name="adhesive_type_selector" invisible="1"/>
                                        <field name="rod_number" attrs="{'invisible':[('adhesive_type_id', 'not in','EN BARRA')]}"/>
                                        <field name="photo_format" widget="pdf_viewer" attrs="{'invisible':[('adhesive_type_id', 'not in','IMPRESO')]}"/>
                                    </group>
                                    <group string="Acabados Especiales">
                                        <field name="cold_foil" widget="checkbox"/>
                                        <field name="cold_foil_id" attrs="{'invisible':[('cold_foil', '!=',True)]}"/>
                                        <field name="cold_foil_selector" invisible="1"/>
                                        <field name="cold_foil_width" attrs="{'invisible':[('cold_foil_selector', '!=','PLATA')]}"/>
                                        <field name="cast" widget="checkbox"/>
                                        <field name="cast_reference" attrs="{'invisible':[('cast', '!=',True)]}"/>
                                        <field name="cast_width" attrs="{'invisible':[('cast', '!=',True)]}"/>
                                    </group>
                                    <group string="Tintas Especiales">
                                        <field name="ink_ids"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Design Features">
                                <group>
                                    <group>
                                        <field name="required_match_print" widget="checkbox"/>
                                        <field name="designer" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                        <field name="datetime" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                    </group>
                                    <group>
                                        <field name="quantity" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                        <field name="Customer" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                        <field name="name" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                        <field name="sign_customer" widget="signature" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                    </group>
                                    <group>
                                        <field name="deliver_to" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                        <field name="sign_designer" widget="signature" attrs="{'invisible':[('required_match_print', '!=',True)]}"/>
                                    </group>
                                    <group>
                                        <field name="vendor_date"/>
                                        <field name="date_recieved_approved"/>
                                        <field name="observations"/>
                                    </group>
                                    <group>
                                        <!--<h5>rodillo</h5>-->
                                        <field name="specification_width_name"/>
                                        <!--cabida largo-->
                                    </group>
                                    <group>
                                        <field name="fit_long_id"/>
                                        <field name="color_scale_id"/>
                                        <field name="complexity" widget="priority"/>
                                    </group>
                                </group>
                            </page>
                            <page string="packaging characteristics">
                            </page>
                            <page string="Bills of Materials">
                                <field name="lists_ids"/>
                            </page>
                            <page string="Routings">
                                <field name="routings_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>


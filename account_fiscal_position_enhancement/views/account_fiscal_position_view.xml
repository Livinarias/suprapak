<odoo>
    <record id="view_account_position_form_inherit" model="ir.ui.view">
        <field name="name">account.fiscal.position.form.inherit</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_ids']/tree/field[@name='tax_dest_id']" position="after">
                <field name="condition_type"/>
                <field name="amount"/>
            </xpath>
            <xpath expr="//field[@name='tax_ids']/form/group/field[@name='tax_dest_id']" position="after">
                <field name="condition_type"/>
                <field name="amount"/>
            </xpath>
        </field>
    </record>
</odoo>
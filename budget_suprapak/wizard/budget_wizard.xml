<odoo>
    <record id="budger_wizard_suprapak_form" model="ir.ui.view">
            <field name="name">budget.wizard.form</field>
            <field name="model">notification.budget</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Customer Credit Limit">
                    <span>Overcome budget established</span>
                    <footer>
                        <button string="Notify" name="button_send_mail" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
    </record>
    <record id="action_customer_limit_wizard" model="ir.actions.act_window">
            <field name="name">budget.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">notification.budget</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
    </record>
</odoo>
<odoo>
    <data noupdate="1">
        <record id="mail_template_budget_suprapak" model="mail.template">
            <field name="name">Purchase Order: limit Budget</field>
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="subject">${object.company_id.name}</field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.compute_patrners_ids()}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <br></br>
                        <h2>This message is for notify that the purchase Bugdet will overcome budget planned</h2>
                        <br></br>
                    </p>
                </div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False" />
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>
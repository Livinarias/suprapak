<?xml version="1.0"?>
    <odoo>
        <template id="report_invoice_document_supra" inherit_id="account.report_invoice_document">
            <xpath expr="//t-set[@name='address']" positon="replace">
                <t t-set="address">
                    <address t-if="o.parent=='LyS'" t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;parent&quot;], &quot;no_marker&quot;: True}"/>
                    <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <div t-if="o.partner_id.vat" class="mt16">
                            <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                    </t>
            </xpath>
        </template>
    </odoo>